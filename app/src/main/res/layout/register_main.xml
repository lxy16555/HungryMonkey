<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hungry Monkey"
        android:id="@+id/title2"
        android:layout_marginTop="64dp"
        android:textIsSelectable="true"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/username2"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password2"
        android:layout_marginTop="180dp"
        android:layout_alignLeft="@+id/username2"
        android:layout_alignStart="@+id/username2" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password3"
        android:layout_marginTop="240dp"
        android:layout_alignLeft="@+id/username2"
        android:layout_alignStart="@+id/username2" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signup2"
        android:textSize="20dp"
        android:layout_below="@+id/password3"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Already have an account?"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_below="@+id/signup2"
        android:layout_marginTop="16dp"
        android:layout_alignLeft="@+id/password3"
        android:layout_alignStart="@+id/password3" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/signin2"
        android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_dark" />


</RelativeLayout>